{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["airbnb"],
  "rules": {
    "comma-dangle": ["error", "never"],
    "global-require": "off",
    "linebreak-style": "off",
    "import/no-named-as-default": 0,
    "no-unused-expressions": ["error", {"allowTernary": true}]
  }
}